page{
  height:100%;
}
.container{
  width: 100%;
  height:100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.timing-box{
  display: flex;
  justify-content: space-around;
  width: 80%;
  overflow: hidden;
  background: #E1671F;
  padding:20rpx 0;
  margin-top:60rpx;
}
.timing-title{
  color:red;
  font-weight: 800;
}
.timing{
  width: 80rpx;
  height:80rpx;
  text-align: center;
  line-height: 80rpx;
  background: linear-gradient(#FFB700, #FEA500);
  color:#FFFF;
}
.unit{
  color:#FFFF;
  display: flex;
  align-items: flex-end;
  font-size: 24rpx;
}
button{
  background: green;
  color:#ffff;
}